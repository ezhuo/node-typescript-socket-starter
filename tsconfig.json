{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2018"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
  "paths": {
    "@config": ["./src/config/"],
    "@config/*": ["./src/config/*"],
    "@core": ["./src/app/@core/"],
    "@core/*": ["./src/app/@core/*"],
    "@adapter": ["./src/app/adapter/"],
    "@adapter/*": ["./src/app/adapter/*"],
  }
}
